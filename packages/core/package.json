{
  "name": "@pantry-pixie/core",
  "version": "0.0.1",
  "description": "Core types, schemas, and Pixie personality for Pantry Pixie",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "default": "./dist/schema/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    },
    "./pixie": {
      "types": "./dist/pixie/index.d.ts",
      "default": "./dist/pixie/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "db:generate": "set -a; [ -f ../../.env ] && . ../../.env; drizzle-kit generate",
    "db:push": "set -a; [ -f ../../.env ] && . ../../.env; drizzle-kit push",
    "db:studio": "set -a; [ -f ../../.env ] && . ../../.env; drizzle-kit studio",
    "db:seed": "bun --env-file=../../.env src/seed.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.38.0",
    "postgres": "^3.4.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "drizzle-kit": "^0.30.0",
    "typescript": "^5.3.0"
  }
}

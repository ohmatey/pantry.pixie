{
  "name": "@pantry-pixie/web",
  "version": "0.0.1",
  "description": "Progressive Web App for Pantry Pixie",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "concurrently -n server,client \"bun run dev:server\" \"bun run dev:client\"",
    "dev:server": "bun --env-file=../../.env src/server/index.ts",
    "dev:client": "vite",
    "build": "vite build",
    "analyze": "vite build && open dist/stats.html",
    "start": "NODE_ENV=production bun --env-file=../../.env src/server/index.ts",
    "generate:assets": "bun scripts/generate-pwa-assets.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.1.0",
    "@pantry-pixie/core": "workspace:*",
    "@pantry-pixie/sdk": "workspace:*",
    "@tanstack/query-async-storage-persister": "^5.90.22",
    "@tanstack/query-sync-storage-persister": "^5.90.22",
    "@tanstack/react-query": "^5.62.0",
    "@tanstack/react-query-persist-client": "^5.90.22",
    "@types/canvas-confetti": "^1.9.0",
    "ai": "^4.1.0",
    "canvas-confetti": "^1.9.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dexie": "^4.3.0",
    "drizzle-orm": "^0.45.1",
    "framer-motion": "^12.34.0",
    "idb-keyval": "^6.2.2",
    "jose": "^6.1.3",
    "lucide-react": "^0.468.0",
    "postgres": "^3.4.8",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^6.28.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.1",
    "zod": "^3.23.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@napi-rs/canvas": "^0.1.92",
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.1.0",
    "playwright": "^1.58.2",
    "postcss": "^8.4.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "terser": "^5.46.0",
    "typescript": "^5.3.0",
    "vite": "^6.0.0",
    "vite-plugin-pwa": "^0.21.0",
    "web-vitals": "^5.1.0"
  }
}

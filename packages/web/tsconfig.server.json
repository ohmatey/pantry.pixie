{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@pantry-pixie/core": ["../core/src"],
      "@pantry-pixie/sdk": ["../sdk/src"]
    },
    "types": ["bun-types"]
  },
  "include": ["src/server/**/*.ts"],
  "exclude": ["node_modules"]
}

# Server
NODE_ENV=development
PORT=3000
HOST=localhost

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/pantry_pixie
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30
DB_CONNECT_TIMEOUT=10

# Authentication (must be 32+ characters)
JWT_SECRET=change-this-to-a-random-secret-at-least-32-chars

# AI
OPENAI_API_KEY=sk-your-openai-api-key

# Security (comma-separated, required in production)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_POINTS=100
RATE_LIMIT_DURATION=60
RATE_LIMIT_BLOCK_DURATION=60

# Timeouts
REQUEST_TIMEOUT=30000

# Logging
LOG_LEVEL=info

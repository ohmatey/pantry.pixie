{
  "name": "pantry-pixie",
  "version": "0.0.1",
  "description": "Pantry Pixie: Your warm, witty kitchen companion. AI-powered grocery management that gets you.",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/core",
    "packages/sdk",
    "packages/cli",
    "packages/web"
  ],
  "scripts": {
    "dev": "bun run --cwd packages/web dev",
    "dev:core": "bun run --cwd packages/core dev",
    "dev:sdk": "bun run --cwd packages/sdk dev",
    "dev:cli": "bun run --cwd packages/cli dev",
    "dev:web": "bun run --cwd packages/web dev",
    "build": "bun run build:core && bun run build:sdk && bun run build:cli && bun run build:web",
    "build:core": "bun run --cwd packages/core build",
    "build:sdk": "bun run --cwd packages/sdk build",
    "build:cli": "bun run --cwd packages/cli build",
    "build:web": "bun run --cwd packages/web build",
    "test": "bun run build:core && bun test packages/*/src/**/__tests__/**/*.test.ts",
    "test:e2e": "bun test packages/web/src/server/__tests__/",
    "db:generate": "bun run --cwd packages/core db:generate",
    "db:push": "bun run --cwd packages/core db:push",
    "db:studio": "bun run --cwd packages/core db:studio",
    "db:seed": "bun run --cwd packages/core db:seed",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json,md,toml}\"",
    "start": "bun run --cwd packages/web start",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "rate-limiter-flexible": "^9.1.1"
  }
}
